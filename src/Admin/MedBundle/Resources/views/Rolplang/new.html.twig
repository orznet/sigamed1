{% block body -%}
               <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times</button>
            <h4 class="modal-title">Agregar Rol al Plan de Gestión</h4>
            </div>			<!-- /modal-header -->
            <div class="modal-body">          
   <form  action="{{ path('rolplang_create', { 'id' : id } ) }}" method="post" {{ form_enctype(form) }}>
   <table class="table table-bordered table-striped hidden-mobile">
   <input type="hidden" name="_method" value="POST" />
     {{ form_errors(form) }}
  <tr>
    <td>Rol</td>
    <td>{{ entity.rol.nombre }}</td>
  </tr>
     <tr>
    <td></td>
    <td><div hidden="true">{{ form_widget(form.rol) }}</div> {{ entity.rol.descripcion }}</td>
  </tr>
   <tr>
    <td>Total Horas Periodo</td>
    <td>
                            <div class="alert alert-warning fade in">
                        <button class="close" data-dismiss="alert">
                            ×
                        </button>
                        <i class="fa-fw fa fa-warning"></i>
                        <strong>Importante!</strong> Ahora registre el valor total de horas por semestre y el número semanas.
                    </div>
        
        
        {{ form_widget(form.horas) }}{{ form_errors(form.horas) }} X 
    {{ form_widget(form.semanas) }}{{ form_errors(form.semanas) }} Semanas
    <br><i> Solo valor entero.</i><div id="porperiodo"></div>    
        <br>Horas registras: {{libre}} de {{total}}, libres {{total-libre}}.
    
    </td>
   </tr>
   

  <tr>
    <td>Descripción del Rol</td>
    <td>{{ form_widget(form.descripcion) }}</td>
  </tr>

  <tr>
    <td></td>
    <td><button type="hidden" class="btn btn-sm btn-primary">Agregar</button></td>
  </tr>
  {{ form_widget(form._token) }}
  </table>
     
   </form></div>
{% endblock %}
