		  {% block body -%}
                <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times</button>
                <h4 class="modal-title">Abrir Registro</h4>
                </div>			<!-- /modal-header -->
                <div class="modal-body">          
                <form  action="{{ path('plangestion_abrir_registro', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
