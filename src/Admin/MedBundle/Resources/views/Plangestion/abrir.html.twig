                  {{ form_errors(edit_form) }}
                <tr>
                 <td>Indique porque requiere reabrir el registro.</td>
                 <td>
                  {{ form_widget(edit_form.observaciones) }}
                 </td>
                </tr>
                <tr>
                   <td></td>
                   <td><button type="hidden" class="btn btn-lg btn-primary">Abrir</button></td>
                </tr>
                {{ form_widget(edit_form._token) }}
                </table>
                </form>
		{% endblock %}