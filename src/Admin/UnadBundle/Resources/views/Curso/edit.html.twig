  </tr>
  {{ form_widget(edit_form._token) }}
  </table>
</form>

        <ul class="record_actions">

       {% if is_granted('ROLE_ADMIN') %}  <li>{{ form(delete_form) }}</li> {%endif%}
</ul>     
{% endblock %}
